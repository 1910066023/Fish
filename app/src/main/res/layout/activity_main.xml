<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/mp_50" />

    <LinearLayout
        android:id="@+id/fragment_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <!--主頁-->
        <RelativeLayout
            android:id="@+id/home_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/fragment_normal_bg">

            <ImageView
                android:id="@+id/home_img"
                android:layout_width="@dimen/mp_24"
                android:layout_height="@dimen/mp_24"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mp_5"
                android:background="@mipmap/home_gray" />

            <TextView
                android:id="@+id/home_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_img"
                android:layout_centerHorizontal="true"
                android:text="主页" />

        </RelativeLayout>
        <!--科普-->
        <RelativeLayout
            android:id="@+id/science_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/fragment_normal_bg">

            <ImageView
                android:id="@+id/science_img"
                android:layout_width="@dimen/mp_24"
                android:layout_height="@dimen/mp_24"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mp_5"
                android:background="@mipmap/science_gray" />

            <TextView
                android:id="@+id/science_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/science_img"
                android:layout_centerHorizontal="true"
                android:text="科普" />
        </RelativeLayout>
        <!--中间交易-->
        <FrameLayout
            android:id="@+id/business_layout"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center"
            android:layout_weight="1"
            android:background="@drawable/fragment_circle_bg"
            android:clipChildren="false">

            <ImageView
                android:id="@+id/business_img"
                android:layout_width="@dimen/mp_48"
                android:layout_height="@dimen/mp_48"
                android:layout_gravity="center|top"
                android:layout_marginTop="@dimen/mp_5"
                android:background="@mipmap/business_gray" />

            <TextView
                android:id="@+id/business_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="@dimen/mp_5"
                android:layout_marginTop="@dimen/mp_5"
                android:text="交易" />
        </FrameLayout>
        <!--消息-->
        <RelativeLayout
            android:id="@+id/news_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/fragment_normal_bg">

            <ImageView
                android:id="@+id/news_img"
                android:layout_width="@dimen/mp_24"
                android:layout_height="@dimen/mp_24"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mp_5"
                android:background="@mipmap/news_gray" />

            <TextView
                android:id="@+id/news_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_img"
                android:layout_centerHorizontal="true"
                android:text="消息" />
        </RelativeLayout>
        <!--个人-->
        <RelativeLayout
            android:id="@+id/personal_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/fragment_normal_bg">

            <ImageView
                android:id="@+id/personal_img"
                android:layout_width="@dimen/mp_24"
                android:layout_height="@dimen/mp_24"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mp_5"
                android:background="@mipmap/personal_gray" />

            <TextView
                android:id="@+id/personal_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/personal_img"
                android:layout_centerHorizontal="true"
                android:text="个人" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
