<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/adapter_science_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="@dimen/mp_8">

        <ImageView
            android:id="@+id/adapter_science_img"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/mp_8"
            android:layout_marginTop="@dimen/mp_8"
            android:background="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/mp_8"
            android:layout_marginLeft="128dp"
            android:layout_marginRight="@dimen/mp_8"
            android:layout_marginTop="@dimen/mp_8">

            <TextView
                android:id="@+id/adapter_science_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/adapter_science_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/adapter_science_name_txt"
                android:layout_marginLeft="@dimen/mp_5"
                android:layout_toRightOf="@+id/adapter_science_name_txt"
                android:ellipsize="end"
                android:maxEms="4"
                android:singleLine="true"
                android:text="啊是发发" />

            <TextView
                android:id="@+id/adapter_science_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mp_5"
                android:layout_toRightOf="@+id/adapter_science_name"
                android:ellipsize="end"
                android:text="类型:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/adapter_science_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/adapter_science_name_type"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/mp_5"
                android:layout_marginRight="@dimen/mp_8"
                android:layout_toRightOf="@+id/adapter_science_type_txt"
                android:maxEms="6"
                android:singleLine="true"
                android:text="其他淡水产品" />

            <TextView
                android:id="@+id/adapter_science_bried_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adapter_science_type"
                android:layout_marginTop="@dimen/mp_5"
                android:text="简介:"
                android:textColor="@color/black"
                android:textSize="@dimen/f_16" />

            <TextView
                android:id="@+id/adapter_science_bried"
                android:layout_marginRight="@dimen/mp_5"
                android:textSize="14sp"
                android:layout_alignBaseline="@+id/adapter_science_bried_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>